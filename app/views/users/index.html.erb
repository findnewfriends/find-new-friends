<section class="container-fluid match">
    <h1>New match requests</h1>
    <% 3.times do %>
        <div class="request row">
            <%= image_tag('avatar_2', class: "avatar") %>
            <div class='box_bio col-xl-5 col-sm-12 col-md-4 col-lg-5'>
                <div class='bio'>
                    <h2>Kévin Tran</h2>
                    <p>Would you like to talk about Football ?</p>
                    <a href="#" class='btn btn-large btn-primary'>See profile</a>
                </div>
            </div>
            <div class='buttons col-xl-5 col-sm-12 col-md-4 col-lg-5'>
                <a href="#" class='btn btn-large btn-success'>Accept Match Request</a>
                <a href="#" class='btn btn-large btn-danger'>Refuse Match Request</a>
